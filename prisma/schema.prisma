// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Match {
  id                 Int      @id @default(autoincrement())
  createdAt          DateTime @default(now())
  player1            String
  playerOneCharacter String[]
  playerTwo          String
  playerTwoCharacter String[]
  matchDate          DateTime
  bracketBlock       String
  videoUrl           String

  Event     Event   @relation(fields: [eventId], references: [id])
  eventId   Int
  Channel   Channel @relation(fields: [channelId], references: [id])
  channelId Int
}

model Event {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String
  eventDate DateTime
  matches   Match[]
  channel   Channel  @relation(fields: [channelId], references: [id])
  channelId Int
}

model Channel {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  name       String
  region     String
  thumbnail  String
  youtubeId  String
  youtubeURL String
  twitterURL String?
  twitchURL  String?
  events     Event[]
  matches    Match[]
}
